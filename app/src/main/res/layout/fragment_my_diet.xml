<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".gui.MyDietFragment">

    <TextView
        android:id="@+id/my_diet_frag_explenation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/diet_fragment_explenation"
        />
    <ListView
        android:id="@+id/my_diet_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_diet_frag_explenation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/add_diet_btn" />
    <Button
        android:id="@+id/add_diet_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/add_diet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/make_diet_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/custom_diet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
